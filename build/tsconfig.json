{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
